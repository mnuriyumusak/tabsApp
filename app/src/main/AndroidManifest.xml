<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tabsappdeneme.mnuriyumusak.tabsdeneme">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/my_icon"
        android:label="Tabs App"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".CreateFileInFolderActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".CreateFolderAPI"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".CameraActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AfterPicture"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".DersGirme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".DersEkleme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".DriveApi"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>