<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_credits">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/drawer_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Hakkında"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:id="@+id/textView11"
            android:textSize="20sp"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Mehmet Nuri Yumuşak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView18"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:layout_below="@+id/textView18"
            android:layout_alignEnd="@+id/textView18"
            android:layout_marginTop="13dp" />

        <TextView
            android:text="tabsappinfo@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView21"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView19"
            android:textColor="@color/colorAccent" />

        <TextView
            android:text="Bu uygulamayı geliştirme sürecinde desteğini benden esirgemeyen sevgili oda arkadaşım Utku Haspulat'a teşekkürler."
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="79dp"
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:textAlignment="center" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        android:id="@+id/navigation_view_credits">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>